{% extends 'base.jinja' %}

{% block content %}

    <h1>Build order number: {{ build.id }}</h1>
    <h5>{{ build.users.first_name }} {{ build.users.last_name }}</h5>
    
    {% for component_part in components %}
        <ul>
            <div>
                <li>{{ component_part.component.image_link }}</li>
                    <div>
                        <li>{{ component_part.component.name }}</li>
                        <li>{{ component_part.component.description }}</li>
                        <li>{{ component_part.component.type }}</li>
                        <li>Â£{{ component_part.component.price }}</li>
                        <li>Product is made by {{ component_part.component.manufacturer }}</li>
                    </div>
            </div>
        </ul>
    {% endfor %}
    <div>
        {% if build.completed == True and build.delivered == True %}
            <h6>Build has been delivered</h6>
        {% elif build.completed == True and build.delivered != True %}
            <h6>Build has been completed, and will be delivered soon.</h6>
        {% else %}
            <h6>Build is pending.</h6>
        {% endif %}
    </div>
    <div>
        <form action="/builds/{{ build.id }}/complete" method="POST">
            <button type="submit">Completed</button>
        </form>
        <form action="/builds/{{ build.id }}/deliver" method="POST">
            <button type="submit">Delivered</button>
        </form>
    </div>
    <div>
        <a href="/builds/{{ build.id}}/edit"><button type="submit">Edit Build</button></a>
        <form action="/builds/{{ build.id }}/delete" method="POST">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this build?')">Delete Build</button>
        </form>
    </div>
{% endblock %}