{% extends 'base.jinja'%}

{% block content %}
<main></main>
    <h1>Order a New Build</h1>
        <div>
            <form action="/builds" method="POST">
                <div>
                    <label for="user">Select User:</label>
                    <select name="user" id="user">
                        {% for user in users %}
                            <option value="{{ user.id }}">{{ user.first_name }} {{ user.last_name }}</option>
                        {% endfor %}
                    </select>
                </div>
                    <div>
                        {% for component_type in component_types %}
                            <label for="{{ component_type }}">{{ component_type }}:</label>
                            <select name="{{ component_type }}" id="{{ component_type }}">
                                <option value="">Select a {{ component_type }}</option>
                                {% for component in components if component.type == component_type %}
                                    <option value="{{ component.id }}">{{ component.name }}: Â£{{component.price}}</option>
                                {% endfor %}
                            </select>
                        {% endfor %}
                    </div>
                <button type="submit">Create Build</button>
            </form>
        </div>
</main>
{% endblock %}