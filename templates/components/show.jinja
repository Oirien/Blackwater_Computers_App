{% extends 'base.jinja' %}

{% block content %}
<main class="bg__components">
    <section class="container showcomponent positionfix">
        <div class="showcomponent__wrapper">
            {% if component %}
                <h1 class="showcomponent__name">{{ component.name }}</h1>
                <div class="showcomponent__imagewrapper">
                <img class="showcomponent__image" src="{{ component.image_link }}" alt="Component Image">
                </div>
                <p class="showcomponent__description">{{ component.description }}</p>
                <p class="showcomponent__price">Â£{{ component.price }}</p>
                <p class="showcomponent__manufacturer"> This product is made by {{ component.manufacturer }}</p>
                
            {% else %}
                <p>Component not found.</p>
            {% endif %}
        </div>
    </section>
</main>
{% endblock %}