{% extends 'base.jinja'%}

{% block content %}
<main class="bg__users">
	<section class="container users positionfix">
		<div class="users__wrapper">
		<h1 class="users__header">Users</h1>
			<h2 ><a style="text-decoration:none" href="/users/new"><button class="users__button">Create new user</button></a></h2>
				<div class="users__list">
					{% for user in users %}
						<ul class="users__list--entry">
							<li class="users__name"><a style="text-decoration:none" href="/users/{{ user.id }}"> {{user.first_name}} {{user.last_name}}</a></li>
						</ul>
					{% endfor %}
				</div>
		</div>
	</section>
</main>
{% endblock %}